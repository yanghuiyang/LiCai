<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/editUser"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

	<LinearLayout
	    android:id="@+id/LinearLayout01"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1.0"
	    android:background="@drawable/default_bg"
	    android:orientation="vertical" >

	    <RelativeLayout
	        android:id="@+id/RelativeLayout02"
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="15.0px"
	        android:layout_marginRight="15.0px"
	        android:layout_marginTop="62.0px"
	        android:background="@drawable/login_back"
	        android:paddingBottom="10.0px"
	        android:paddingTop="21.0px" >

	        <EditText
	            android:id="@+id/edit_username"
				android:focusable="false"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_alignParentTop="true"
	            android:layout_marginBottom="5.0px"
	            android:layout_marginLeft="5.0dip"
	            android:layout_marginRight="5.0dip"
	            android:layout_marginTop="5.0dip"
	            android:background="@drawable/qq_edit_login"
	            android:inputType="text"
	            android:maxLength="10"
	            android:paddingLeft="45.0sp"
	            android:saveEnabled="true" />

	        <TextView
	            android:id="@+id/TextView01"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBottom="@+id/edit_username"
	            android:layout_alignLeft="@+id/edit_username"
	            android:layout_alignTop="@+id/edit_username"
	            android:layout_marginRight="15.0sp"
	            android:gravity="center_vertical"
	            android:paddingLeft="7.0sp"
	            android:text="@string/strAccInputLabel"
	            android:textColor="#ff3f3f3f"
	            android:textSize="16.0dip" />


	        <EditText
	            android:id="@+id/edit_pwd"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/edit_username"
	            android:layout_alignRight="@+id/edit_username"
	            android:layout_below="@+id/edit_username"
	            android:layout_marginRight="1.0dip"
	            android:background="@drawable/qq_edit_login"
	            android:inputType="textPassword"
	            android:maxLength="16"
	            android:paddingLeft="45.0sp"
	            android:saveEnabled="true" />

	        <TextView
	            android:id="@+id/TextView02"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBottom="@+id/edit_pwd"
	            android:layout_alignRight="@+id/TextView01"
	            android:layout_alignTop="@+id/edit_pwd"
	            android:gravity="center_vertical"
	            android:paddingLeft="7.0sp"
	            android:text="@string/strPswInputLabel"
	            android:textColor="#ff3f3f3f"
	            android:textSize="16.0dip" />
  
 			    />

 			<EditText
 			    android:id="@+id/edit_tel"
 			    android:layout_width="wrap_content"
 			    android:layout_height="wrap_content"
 			    android:layout_alignLeft="@+id/edit_pwd"
 			    android:layout_alignRight="@+id/edit_pwd"
 			    android:layout_below="@+id/edit_pwd"
 			    android:layout_marginTop="16dp"
 			    android:background="@drawable/qq_edit_login"
 			    android:ems="10"
 			    android:inputType="text"
 			    android:maxLength="16"
 			    android:paddingLeft="45.0sp"
 			    android:saveEnabled="true" >
 			    <requestFocus />
 			</EditText>

 			<TextView
 			    android:id="@+id/TextView04"
 			    android:layout_width="wrap_content"
 			    android:layout_height="wrap_content"
 			    android:layout_alignBaseline="@+id/edit_tel"
 			    android:layout_alignBottom="@+id/edit_tel"
 			    android:layout_alignLeft="@+id/edit_tel"
 			    android:gravity="center_vertical"
 			    android:paddingLeft="7.0sp"
 			    android:text="@string/tel"
 			    android:textColor="#ff3f3f3f"
 			    android:textSize="16.0dip" />

 			<TextView
 			    android:id="@+id/TextView03"
 			    android:layout_width="wrap_content"
 			    android:layout_height="wrap_content"
 			    android:layout_alignLeft="@+id/edit_tel"
 			    android:layout_below="@+id/edit_tel"
 			    android:layout_marginTop="18dp"
 			    android:gravity="center_vertical"
 			    android:paddingLeft="7.0sp"
 			    android:text="@string/sex"
 			    android:textColor="#ff3f3f3f"
 			    android:textSize="16.0dip" />



 			<Spinner
 			    android:id="@+id/spinner_sex"
 			    android:layout_width="260px"
 			    android:layout_height="100px"
 			    android:layout_alignTop="@+id/TextView03"
 			    android:layout_toRightOf="@+id/TextView01"
 			    />

			<Button
				android:id="@+id/edit_btn_save"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_alignLeft="@+id/TextView03"
				android:layout_alignRight="@+id/edit_tel"
				android:layout_below="@+id/spinner_sex"
				android:layout_marginTop="90dp"
				android:text="@string/save"
				android:textSize="16.0dip" />

	    </RelativeLayout>

	    <TableLayout
	        android:id="@+id/TableLayout01"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20.0px"
	        android:layout_marginRight="20.0px"
	        android:stretchColumns="1" >

	        <TableRow>
	        </TableRow>
	    </TableLayout>
	</LinearLayout>
</LinearLayout>
